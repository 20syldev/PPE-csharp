<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="using:FluentAvalonia.UI.Controls"
    x:Class="PPE.Controller.Password"
    Title="Change Password"
    WindowStartupLocation="CenterOwner"
    SizeToContent="Height"
    CanResize="False"
    Width="420"
>
    <Border Padding="24">
        <StackPanel Spacing="16">
            <TextBlock
                Text="Change Password"
                FontSize="20"
                FontWeight="SemiBold"
            />

            <!-- Current password -->
            <StackPanel Spacing="6">
                <TextBlock Text="Current password" FontSize="12"/>
                <TextBox x:Name="_currentPassword" PasswordChar="*"/>
            </StackPanel>

            <!-- New password -->
            <StackPanel Spacing="6">
                <TextBlock Text="New password" FontSize="12"/>
                <TextBox x:Name="_newPassword" PasswordChar="*"/>
            </StackPanel>

            <!-- Password strength -->
            <StackPanel Spacing="8">
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Password strength" FontSize="12"/>
                    <TextBlock x:Name="_strengthText" Grid.Column="1" FontSize="12" FontWeight="SemiBold"/>
                </Grid>
                <ProgressBar x:Name="_strengthBar" Height="4" Minimum="0" Maximum="100" Value="0"/>
            </StackPanel>

            <!-- Criteria -->
            <Border
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                CornerRadius="8"
                Padding="16"
            >
                <StackPanel Spacing="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconMinLength" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textMinLength" Text="8 characters minimum" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconUppercase" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textUppercase" Text="At least one uppercase" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconLowercase" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textLowercase" Text="At least one lowercase" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconDigit" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textDigit" Text="At least one digit" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconSpecial" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textSpecial" Text="At least 2 special characters" FontSize="12"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon x:Name="_iconNoRepeat" Symbol="{x:Static ui:Symbol.Dismiss}" FontSize="12"/>
                        <TextBlock x:Name="_textNoRepeat" Text="No 3 consecutive characters" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Confirm password -->
            <StackPanel Spacing="6">
                <TextBlock Text="Confirm new password" FontSize="12"/>
                <TextBox x:Name="_confirmPassword" PasswordChar="*"/>
            </StackPanel>

            <!-- Messages -->
            <ui:InfoBar x:Name="_error" Severity="Error" IsOpen="False" IsClosable="False"/>

            <!-- Warning -->
            <ui:InfoBar
                x:Name="_warning"
                Title="Password history"
                Message="You cannot reuse your last 3 passwords."
                Severity="Warning"
                IsOpen="True"
                IsClosable="False"
            />

            <!-- Buttons -->
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
                <Button x:Name="_cancel" Content="Cancel"/>
                <Button x:Name="_save" Content="Change Password" Classes="accent"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
