<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PPE.Controlleur.HomeWindow"
    Title="Accueil"
    WindowStartupLocation="CenterScreen"
    MinWidth="400" MinHeight="300"
    Width="600" Height="400"
    Background="#1E1E1E"
>
    <Grid RowDefinitions="Auto,*">
        <!-- Header avec bouton paramètres -->
        <Border Grid.Row="0" Background="#252526" Padding="16,12">
            <Grid>
                <TextBlock
                    Text="Accueil"
                    Foreground="#E0E0E0"
                    FontSize="18"
                    FontWeight="SemiBold"
                    VerticalAlignment="Center"
                />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                    <Button x:Name="_settings"
                        Content="Paramètres"
                        Classes="secondary"
                        Padding="12,8"
                    />
                    <Button x:Name="_logout"
                        Content="Déconnexion"
                        Classes="danger"
                        Padding="12,8"
                    />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <TextBlock
                Text="Bienvenue !"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#E0E0E0"
                FontSize="32"
                FontWeight="SemiBold"
            />
        </Grid>
    </Grid>
</Window>
