<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PPE.Controlleur.InfoDialog"
    Title="Information"
    WindowStartupLocation="CenterOwner"
    Background="#252526"
    SizeToContent="Height"
    CanResize="False"
    Width="400"
>
    <StackPanel Margin="20" Spacing="12">
        <TextBlock x:Name="_title"
            Foreground="#E0E0E0"
            Margin="0,0,0,8"
            FontWeight="SemiBold"
            FontSize="16"
        />

        <Border Background="#1E1E1E" CornerRadius="4" Padding="12">
            <SelectableTextBlock x:Name="_content"
                Foreground="#E0E0E0"
                FontFamily="Consolas, monospace"
                FontSize="13"
                TextWrapping="Wrap"
            />
        </Border>

        <Button x:Name="_close"
            Content="Fermer"
            HorizontalAlignment="Right"
            Classes="secondary"
            Padding="16,8"
        />
    </StackPanel>
</Window>
