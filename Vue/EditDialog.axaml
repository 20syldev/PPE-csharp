<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PPE.Controlleur.EditDialog"
    Title="Modifier utilisateur"
    WindowStartupLocation="CenterOwner"
    Background="#252526"
    SizeToContent="Height"
    CanResize="False"
    Width="360"
>
    <StackPanel Margin="20" Spacing="12">
        <TextBlock x:Name="_title"
            Text="Modifier l'utilisateur"
            Foreground="#E0E0E0"
            Margin="0,0,0,8"
            FontWeight="SemiBold"
            FontSize="16"
        />

        <!-- Nom -->
        <StackPanel Spacing="4">
            <TextBlock Text="Nom" Foreground="#858585" FontSize="12"/>
            <TextBox x:Name="_nom" Padding="10,8"/>
        </StackPanel>

        <!-- Adresse -->
        <StackPanel Spacing="4">
            <TextBlock Text="Adresse" Foreground="#858585" FontSize="12"/>
            <TextBox x:Name="_adr" Padding="10,8"/>
        </StackPanel>

        <!-- Ville + Code postal -->
        <Grid ColumnDefinitions="*,12,Auto">
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="Ville" Foreground="#858585" FontSize="12"/>
                <TextBox x:Name="_ville" Padding="10,8"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Spacing="4">
                <TextBlock Text="Code postal" Foreground="#858585" FontSize="12"/>
                <TextBox x:Name="_code" Width="100" Padding="10,8" Watermark="75001"/>
            </StackPanel>
        </Grid>

        <!-- Erreur code postal -->
        <TextBlock x:Name="_codeError" Foreground="#F87171" FontSize="11" IsVisible="False"/>

        <!-- Boutons -->
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,12,0,0" Spacing="8">
            <Button x:Name="_cancel" Content="Annuler" Classes="secondary"/>
            <Button x:Name="_save" Content="Enregistrer" Classes="primary"/>
        </StackPanel>
    </StackPanel>
</Window>
