<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="PPE.ConfirmDialog"
    Title="Confirmation"
    WindowStartupLocation="CenterOwner"
    Background="#252526"
    SizeToContent="Height"
    CanResize="False"
    Width="320"
>
    <StackPanel Margin="20" Spacing="16">
        <TextBlock x:Name="_msg"
            Foreground="#E0E0E0"
            TextWrapping="Wrap"
            FontSize="14"
        />

        <!-- Boutons -->
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Spacing="8">
            <Button x:Name="_cancel" Content="Annuler" Classes="secondary"/>
            <Button x:Name="_confirm" Content="Supprimer" Classes="danger"/>
        </StackPanel>
    </StackPanel>
</Window>
